<script>

{% comment %}
  создание объекта с картинками из файлов
{% endcomment %}
var fileUrl = {}
{% assign option_title  = 'Цвет' %}
{% for option_name in collections.all.options %}
  {% if option_name.title == option_title %}
      {% for option_value in option_name.values %}
      {% assign fileName = option_value.title | downcase | append: '.png' %}
      {% assign fileURL = fileName | file_url %}
        {% if fileURL %}
          fileUrl['{{ option_value.title | downcase }}'] = '{{ fileURL }}';
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endfor %}

  var cv_currency_format = '{{ money_with_currency_format }}';
  var money = new ISnew.Money();
  money.set(cv_currency_format);

  Site.client_group = {
    id:                   '{{ client_group.id }}',
    title:                '{{ client_group.title }}',
    discount:             '{{ client_group.discount }}',
    discount_description: '{{ client_group.discount_description }}',
  };
  Site.template = '{{ template }}';
  Site.locale   = '{{ language.locale }}';

  Site.language = {
    locale: '{{ language.locale }}',
    not_default: {{ language.not_default? }},
  };

  Site.account = {
    id: '{{ account.id }}',
    hide_items: '{{ account.hide_items_out_of_stock }}',
    email: '{{ account.email }}',
  };

  /*$(function() {
    AjaxSearch.setConfig({
      template: 'ajax-search',
      letters: 3
    })
  });*/

  var ProductsConfig = {
  init_option: true,
  filtered: false,
  show_variants: true,
  file_url: fileUrl,
  options: {
        'Цвет': 'option-image',
        'Размер': 'option-radio',
        'Материал': 'option-select',
        'Жесткий диск': 'option-span'
      }
  }

  Products = new ISnew.Products(ProductsConfig);
</script>