<script>

{% comment %}
  создание объекта с картинками из файлов
{% endcomment %}
var fileUrl = {}
{% assign option_title  = 'Цвет' %}
{% for option_name in collections.all.options %}
  {% if option_name.title == option_title %}
      {% for option_value in option_name.values %}
      {% assign fileName = option_value.title | downcase | append: '.png' %}
      {% assign fileURL = fileName | file_url %}
        {% if fileURL %}
          fileUrl['{{ option_value.title | downcase }}'] = '{{ fileURL }}';
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endfor %}

  var cv_currency_format = '{{ money_with_currency_format }}';
  var money = new ISnew.Money();
  money.set(cv_currency_format);

  var ProductsConfig = {
  init_option: true,
  filtered: true,
  show_variants: true,
  file_url: fileUrl,
  options: {
        'Цвет': 'option-image',
        'Размер': 'option-radio',
        'Материал': 'option-select',
        'Жесткий диск': 'option-span'
      }
  }

  Products = new ISnew.Products(ProductsConfig);
</script>