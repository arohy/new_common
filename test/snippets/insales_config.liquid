<script>

{% comment %}
  создание объекта с картинками из файлов
{% endcomment %}
var fileUrl = {}
{% assign option_title  = 'Цвет' %}
{% for option_name in collections.all.options %}
  {% if option_name.title == option_title %}
      {% for option_value in option_name.values %}
      {% assign fileName = option_value.title | downcase | append: '.png' %}
      {% assign fileURL = fileName | file_url %}
        {% if fileURL %}
          fileUrl['{{ option_value.title | downcase }}'] = '{{ fileURL }}';
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endfor %}

  var cv_currency_format = '{{ money_with_currency_format }}';
  var money = new ISnew.Money();
  money.set(cv_currency_format);
  var ProductsConfig = {
  product_id: 'data-product-id',
  init_option: true,
  file_url: fileUrl,
  options: {
        'Цвет': 'option-image',
        'Размер': 'option-span',
        'Материал': 'option-span',
        'Жесткий диск': 'option-span'
      }
  }
  var ProductsConfig3 = {
  product_id: 'data-product-id',
  init_option: true,
  file_url: fileUrl
  }
  var ProductsConfig2 = {
  product_id: 'data-product-id',
  init_option: true,
  file_url: fileUrl,
  options: {
        'Размер': 'option-select',
        'Материал': 'option-span',
        'Жесткий диск': 'option-select'
      }
  }

  var ProductsConfig4 = {
  product_id: 'data-product-id',
  init_option: true,
  file_url: fileUrl,
  options: {
        'Цвет': 'option-image123',
        'Размер': 'option-select',
        'Материал': 'option-select',
        'Жесткий диск': 'option-select'
      }
  }

  Products = new ISnew.Products(ProductsConfig);
  jQuery(document).ready(function($) {
    setTimeout(function () {
      console.log('setConfig Products1')
      Products.setConfig(ProductsConfig3);
    }, 5000)
    setTimeout(function () {
      console.log('setConfig Products2')
      Products.setConfig(ProductsConfig2);
    }, 10000)
    setTimeout(function () {
      console.log('setConfig Products3')
      Products.setConfig(ProductsConfig4);
    }, 15000)
  });
</script>